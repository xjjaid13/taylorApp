<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.dao.UserMapperDao">
  <resultMap id="user" type="User">
    <result property="userId" column="userId"/>
    <result property="username" column="username"/>
    <result property="password" column="password"/>
    <result property="style" column="style"/>
  </resultMap>
  <select id="select" resultType="java.util.Map" resultMap="user">select * from user where userId = #{userId}</select>
  <select id="selectList" resultType="java.util.List" resultMap="user">select * from user where 1 = 1 
    <if test="{condition != null}">and ${condition}</if>  
    <if test="userId != null">and userId = #{userId}</if>
    <if test="username != null">and username = '#{username}'</if>
    <if test="password != null">and password = '#{password}'</if>
    <if test="style != null">and style = '#{style}'</if> limit #{startPage},#{page}
  </select>
  <select id="selectCount" resultType="java.lang.Integer">select count(userId) from user where 1 = 1 
    <if test="{condition != null}">and ${condition}</if>  
    <if test="userId != null">and userId = #{userId}</if>
    <if test="username != null">and username = '#{username}'</if>
    <if test="password != null">and password = '#{password}'</if>
    <if test="style != null">and style = '#{style}'</if> 
  </select>
  <insert id="insert" parameterType="User">insert into user (userId,username,password,style) values (#{userId},#{username},#{password},#{style})</insert>
  <update id="update" parameterType="User">update user set 
    <if test="userId != null">userId = #{userId},</if>
    <if test="username != null">username = #{username},</if>
    <if test="password != null">password = #{password},</if>
    <if test="style != null">style = #{style},</if>userId = #{userId} where userId = #{userId}
  </update>
  <delete id="deleteByIds" parameterType="User">delete from user where userId in (#{ids})</delete>
  <select id="maxId" resultType="java.util.Map" resultMap="user">select max(userId) from user</select>
</mapper>
